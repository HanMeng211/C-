#include<iostream>
using namespace std;
class Date
{
public:
	void DisPlay()
	{
		cout << _year <<"_"<< _month <<"_"<< _day << endl;
	}
	void SetDate(int year,int month,int day)
	{
		_year = year;
		_month = month;
		_day = day;
	}
private:
	int _year;
	int _month;
	int _day;
};
int main()
{
	Date d1, d2;
	d1.SetDate(2018, 12, 15);
	d2.SetDate(2021, 4, 8);
	d1.DisPlay();
	d2.DisPlay();
	return 0;
}
